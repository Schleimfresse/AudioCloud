<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Edit | AudioCloud</title>
		<link rel="stylesheet" href="/css/global.css" />
		<link rel="stylesheet" href="/css/delete.css" />
		<script>
			// EJS Variables
			const information =  <%- data %>;
		</script>
		<script defer type="module" src="../js/delete/delete_item.js"></script>
		<script defer src="/js/searchformValidation.js"></script>
	</head>
	<body>
		<header>
			<div class="icon-spacing-right" id="menu">
				<a id="menu-link" href="/"
					>				<img class="icons icon-spacing-right" src="../svg/musical-notes-outline.svg" alt="music-note" />
					<span><span class="bold">A</span>udioCloud</span></a
				>
			</div>
			<a href="/upload" class="std_btn">Upload</a>
			<a href="/edit" class="std_btn">Edit</a>
			<a href="/delete" class="std_btn">Delete</a>
			<form class="row" action="/search">
				<input
					class="std_btn no_margin_right"
					spellcheck="true"
					placeholder="Search for music ..."
					type="search"
					name="query"
					id="searchquery_input"
				/>
				<input type="hidden" name="mediatype" value="" />
				<input type="hidden" name="type" value="search" />
				<select name="mode" class="std_btn no_padding-top-bot">
					<option value="standard">Standard</option>
					<option value="strict">Strict</option>
				</select>
				<button
					class="std_btn square_button no_margin_left"
					onclick="return validation(this.parentElement.children[0])"
					type="submit"
				>
				<img class="icons" src="../svg/search-outline.svg" alt="search" />

				</button>
			</form>
		</header>
		<main class="center">
			<div>
				<div><h2 id="heading"></h2></div>
                <form id="delete_confirm_form" method="post">
				<div><button type="button" class="std_btn" onclick="window.history.go(-1)">No, command back</button><button type="submit" class="std_btn">Yes, delete</button></div>
			</div></form>
		</main>
	</body>
</html>
